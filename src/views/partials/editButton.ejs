<div id="editPopupForm" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-[20px] p-6 w-[90%] max-w-lg shadow-xl relative
              w-full h-full max-w-full rounded-none sm:rounded-[20px] sm:h-auto sm:p-6 p-2 overflow-y-auto">
    <button id="closeEditPopupBtn"
      class="absolute top-3 right-3 p-3 rounded-full hover:bg-black/5 cursor-pointer hover:text-black">
      <i data-lucide="x" class="w-6 h-6"></i>
    </button>
    <h2 class="text-xl mb-4">Edit Account</h2>
    <form id="editForm" method="POST" class="flex flex-col gap-4">
      <input type="hidden" name="id" id="editId">
      <input type="hidden" name="favicon" id="editFavicon">
      <div class="flex flex-col items-center gap-2">
        <div class="flex flex-col items-center justify-center">
          <img id="editPlatformFavicon" src="/images/logo.png"
            class="w-[70px] rounded-full h-[70px] object-cover object-center" alt="">
        </div>
        <div class="flex flex-col gap-1 w-full">
          <label for="editPlatform" class="text-sm text-gray-800 flex gap-1">Platform</label>
          <input id="editPlatform" type="text" name="platform"
            class="bg-transparent w-full text-m text-gray-700 placeholder:text-gray-400 outline-none rounded-lg border-gray-200 border-2 bg-gray-100 px-2 py-2"
            required />
        </div>
      </div>
      <div class="flex flex-row items-center gap-2">
        <div class="flex flex-col gap-1 w-full">
          <label for="editEmail" class="text-sm text-gray-800 flex gap-1">Email</label>
          <input id="editEmail" type="email" name="email"
            class="bg-transparent w-full text-m text-gray-700 placeholder:text-gray-400 outline-none rounded-lg border-gray-200 border-2 bg-gray-100 px-2 py-2"
            required />
        </div>
      </div>
      <div class="flex flex-row items-center gap-2">
        <div class="flex flex-col gap-1 w-full">
          <label for="editUsername" class="text-sm text-gray-800 flex gap-1">Username</label>
          <input id="editUsername" type="text" name="username"
            class="bg-transparent w-full text-m text-gray-700 placeholder:text-gray-400 outline-none rounded-lg border-gray-200 border-2 bg-gray-100 px-2 py-2"
            required />
        </div>
      </div>
      <div class="flex flex-row items-center gap-2">
        <div class="flex flex-col gap-1 w-full">
          <label for="editPassword" class="text-sm text-gray-800 flex gap-1">Password</label>
          <input id="editPassword" autocomplete="" type="password" name="password"
            class="bg-transparent w-full text-m text-gray-700 placeholder:text-gray-400 outline-none rounded-lg border-gray-200 border-2 bg-gray-100 px-2 py-2"
            required />
        </div>
      </div>
      <div class="flex flex-row items-center gap-2">
        <div class="flex flex-col gap-1 w-full">
          <label for="editTags" class="text-sm text-gray-800 flex gap-1">Tags</label>
          <input id="editTags" type="text" name="tags"
            class="bg-transparent w-full text-m text-gray-700 placeholder:text-gray-400 outline-none rounded-lg border-gray-200 border-2 bg-gray-100 px-2 py-2" />
          <span class="text-xs text-gray-400">Separate tags with commas</span>
        </div>
      </div>
      <button type="submit" class="bg-black text-white px-4 py-2 rounded">Update</button>
    </form>
  </div>
</div>